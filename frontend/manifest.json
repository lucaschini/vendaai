{
  "manifest_version": 3,
  "name": "VendAI - Assistente de Vendas com IA",
  "version": "1.0.0",
  "description": "Assistente inteligente que analisa videochamadas em tempo real e fornece insights para melhorar suas vendas",
  "permissions": ["activeTab", "storage", "tabs", "scripting"],
  "host_permissions": [
    "https://meet.google.com/*",
    "https://*.zoom.us/*",
    "https://teams.microsoft.com/*",
    "http://localhost:8000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://meet.google.com/*",
        "https://*.zoom.us/*",
        "https://teams.microsoft.com/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "insights.html",
        "configuracoes.html",
        "chat.html",
        "configuracoes-ia.html",
        "*.css",
        "*.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
