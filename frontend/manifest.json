{
  "manifest_version": 3,
  "name": "Venda.AI HUD",
  "version": "0.1.0",
  "description": "HUD flutuante com Chat e Insights como overlay em qualquer p√°gina.",
  "permissions": [],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["https://meet.google.com/*"],
      "js": ["content_script.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "css/variables.css",
        "css/base.css",
        "css/hud.css",
        "css/panel.css",
        "css/chat.css",
        "components/Panel.html",
        "components/Chat.html"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
